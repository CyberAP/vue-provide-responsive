{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}